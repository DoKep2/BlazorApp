@typeparam TItem
@if (ListOfItems == null)
{
    if (NullList != null)
    {
        @NullList
    }
    else
    {
        <img src="https://static.wixstatic.com/media/447cdf_100a1d2f16aa4244ae20cf3e9da1ba18~mv2.gif"
             height="200"/>   
    }
}
else if(ListOfItems.Count == 0)
{
    if (EmptyList != null)
    {
        @EmptyList
    }
    else
    {
        <img src="https://d1hbpr09pwz0sk.cloudfront.net/logo_url/empty-s-l-0dc0cb1b" height="200"/>
    }
}
else
{
    @foreach (var item in ListOfItems)
    {
        @ItemTemplate(item);
    }
}
@code {
    
    [Parameter] public RenderFragment NullList { get; set; }
    [Parameter] public RenderFragment EmptyList { get; set; }   
    [Parameter] public RenderFragment<TItem> ItemTemplate { get; set; }
    [Parameter] public List<TItem> ListOfItems { get; set; }
}