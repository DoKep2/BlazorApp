@using System.Reflection.Metadata.Ecma335
@if (!IsTable)
{
    <div class="row text-center alert alert-info">
        <div class="col">
            <p>@Game.Name</p>
            <p>@Game.Genre</p>
            <p>@Game.Year</p>
        </div>
    </div>
    if (DisplayButton)
    {
        <div class="row">
            <div class="col">
                <button class="btn btn-danger" @onclick="(() => SwitchGame.InvokeAsync())">Switch Game</button>
            </div>
            <div class="col">
            </div>
        </div>
    }
}
else
{
    <tr>
        <td>@Game.Name</td>
        <td>@Game.Genre</td>
        <td>@Game.Year</td> 
        <td>
            @if (DisplayButton)
            {
                <button class="btn btn-danger" @onclick="(() => DeleteGame.InvokeAsync(Game))">Delete</button>
            }
        </td>
    </tr>
}
@code {
    [Parameter] public Game Game { get; set; }
    [Parameter] public bool IsTable { get; set; }
    [Parameter] public bool DisplayButton { get; set; }
    [Parameter] public EventCallback<Game> DeleteGame { get; set; }
    [Parameter] public EventCallback SwitchGame { get; set; }
}